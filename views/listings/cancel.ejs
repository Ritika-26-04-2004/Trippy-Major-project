<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Booking Cancelled ‚ùå</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      overflow: hidden;
      color: #721c24;
    }

    .cancel-container {
      background-color: #fff;
      border-radius: 20px;
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
      padding: 40px 30px;
      text-align: center;
      max-width: 500px;
      width: 90%;
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInScale 0.8s forwards;
      animation-delay: 0.5s;
    }

    @keyframes fadeInScale {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .cross-circle {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background-color: #dc3545;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0 auto 30px;
      box-shadow: 0 0 0 10px rgba(220, 53, 69, 0.3);
      animation: pulseRed 1.5s infinite alternate;
      position: relative;
    }

    @keyframes pulseRed {
      from {
        box-shadow: 0 0 0 10px rgba(220, 53, 69, 0.3);
      }
      to {
        box-shadow: 0 0 0 20px rgba(220, 53, 69, 0.1);
      }
    }

    .cross {
      position: relative;
      width: 70px;
      height: 70px;
      transform: rotate(45deg);
    }

    .cross::before,
    .cross::after {
      content: '';
      position: absolute;
      background-color: #fff;
      border-radius: 4px;
    }

    .cross::before {
      width: 10px;
      height: 70px;
      left: 30px;
      top: 0;
      opacity: 0;
      animation: drawCross 0.6s forwards;
      animation-delay: 1s;
    }

    .cross::after {
      width: 70px;
      height: 10px;
      top: 30px;
      left: 0;
      opacity: 0;
      animation: drawCross 0.6s forwards;
      animation-delay: 1.3s;
    }

    @keyframes drawCross {
      from { transform: scale(0); opacity: 0; }
      to { transform: scale(1); opacity: 1; }
    }

    h1 {
      color: #dc3545;
      font-size: 2.3em;
      margin-bottom: 15px;
      animation: slideInUp 0.7s forwards;
      animation-delay: 1.6s;
      opacity: 0;
    }

    p {
      font-size: 1.1em;
      color: #555;
      margin-bottom: 30px;
      animation: slideInUp 0.7s forwards;
      animation-delay: 1.8s;
      opacity: 0;
    }

    @keyframes slideInUp {
      from {
        transform: translateY(20px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .btn-modern {
      background-color: #6c757d;
      color: #fff;
      padding: 12px 30px;
      border: none;
      border-radius: 50px;
      font-size: 1.1em;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
      box-shadow: 0 8px 15px rgba(108, 117, 125, 0.2);
      animation: slideInUp 0.7s forwards;
      animation-delay: 2s;
      opacity: 0;
    }

    .btn-modern:hover {
      background-color: #5a6268;
      box-shadow: 0 10px 20px rgba(108, 117, 125, 0.3);
      transform: translateY(-2px);
    }

    /* Falling Shards (like broken glass) */
    .shards-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      overflow: hidden;
      z-index: 5;
    }

    .shard {
      position: absolute;
      width: 12px;
      height: 20px;
      background: #dc3545;
      transform: rotate(20deg);
      opacity: 0;
      animation: fallShard 3s ease-out forwards;
    }

    .shard:nth-child(2n) { background: #721c24; }
    .shard:nth-child(3n) { background: #b21f2d; }

    @keyframes fallShard {
      0% {
        transform: translate(var(--startX), -50px) rotate(0deg);
        opacity: 1;
      }
      100% {
        transform: translate(var(--endX), 100vh) rotate(720deg);
        opacity: 0;
      }
    }
  </style>
</head>
<body>
  <div class="shards-container" id="shardsContainer"></div>

  <div class="cancel-container">
    <div class="cross-circle">
      <div class="cross"></div>
    </div>
    <h1>Booking Cancelled</h1>
    <p>Your booking was not completed. If this was a mistake, you can try again.</p>
    <a href="/listings" class="btn-modern">Back to Listings</a>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const shardsContainer = document.getElementById('shardsContainer');
      const numberOfShards = 60;

      function createShards() {
        for (let i = 0; i < numberOfShards; i++) {
          const shard = document.createElement('div');
          shard.classList.add('shard');

          const startX = Math.random() * window.innerWidth + 'px';
          const endX = (Math.random() - 0.5) * window.innerWidth * 1.5 + 'px';

          shard.style.setProperty('--startX', startX);
          shard.style.setProperty('--endX', endX);
          shard.style.animationDelay = `${Math.random() * 2}s`;
          shard.style.left = `${Math.random() * 100}vw`;

          shardsContainer.appendChild(shard);

          shard.addEventListener('animationend', () => {
            shard.remove();
          });
        }
      }

      setTimeout(createShards, 1000);
    });
  </script>
</body>
</html>
