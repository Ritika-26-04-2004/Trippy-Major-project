<% layout("/layouts/boilerplate") -%>
<link rel="stylesheet" href="/css/style.css" />

<div class="listings-container row g-4">
  <% if(allListings.length > 0) { %>
    <% for(let listing of allListings) { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <% if(currUser) { %>
          <a href="/listings/<%= listing._id %>" class="listing-card text-decoration-none">
        <% } else { %>
          <a href="/login" class="listing-card text-decoration-none">
        <% } %>
            <div class="card">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img">
              <div class="card-body">
                <div class="card-img-overlay"></div>

                <% if (listing.avgRating && listing.avgRating > 0) { %>
                  <div class="mb-2 text-warning">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <i class="<%= i <= Math.floor(listing.avgRating) 
                        ? 'fas fa-star' 
                        : (i - listing.avgRating < 1 ? 'fas fa-star-half-alt' : 'far fa-star') %>"></i>
                    <% } %>
                    <small class="text-light">(<%= listing.avgRating.toFixed(1) %>)</small>
                  </div>
                <% } else { %>
                  <div class="mb-2 text-muted">
                    <small>No ratings yet</small>
                  </div>
                <% } %>

                <p class="card-text">
                  <b><%= listing.title %></b><br>
                  &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %> / night<br>
                  <%= listing.location %>
                </p>
              </div>
            </div>
          </a>
      </div>
    <% } %>
  <% } else { %>
    <p class="text-center">No listings available at the moment.</p>
  <% } %>
</div>
